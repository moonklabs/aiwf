{
  "name": "claude-code",
  "version": "1.0.0",
  "description": "Claude Code integration template for AIWF",
  "compatible_aiwf_version": ">=0.1.0",
  "features": {
    "feature_ledger": true,
    "ai_persona": true,
    "context_compression": true,
    "offline_cache": true
  },
  "setup_commands": [],
  "files_to_copy": [
    {
      "source": "template/.claude",
      "destination": ".claude"
    },
    {
      "source": "template/CLAUDE.md",
      "destination": "CLAUDE.md"
    }
  ],
  "settings": {
    "auto_context_update": true,
    "feature_ledger_integration": "automatic",
    "persona_activation": "on_demand"
  }
}