{
  "name": "github-copilot",
  "version": "1.0.0",
  "description": "GitHub Copilot integration template for AIWF",
  "compatible_aiwf_version": ">=0.1.0",
  "features": {
    "feature_ledger": true,
    "ai_persona": true,
    "context_compression": false,
    "offline_cache": true
  },
  "setup_commands": [],
  "files_to_copy": [
    {
      "source": "template/.github",
      "destination": ".github"
    }
  ],
  "settings": {
    "auto_feature_reference": true,
    "inline_documentation": true,
    "aiwf_snippets": true
  }
}