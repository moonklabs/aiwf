{
    "permissions": {
        "allow": [
            "Bash(deno task *)",
            "Bash(npm run *)",
            "Bash(cargo *)",
            "Bash(go *)",
            "Bash(git *)",
            "Bash(git worktree *)",
            "Bash(gh *)",
            "Bash(docker *)",
            "Bash(kubectl *)",
            "Bash(terraform *)",
            "Bash(rg *)",
            "Bash(ripgrep *)",
            "Bash(fd *)",
            "Bash(fzf *)",
            "Bash(bat *)",
            "Bash(exa *)",
            "Bash(eza *)",
            "Bash(delta *)",
            "Bash(zoxide *)",
            "Bash(duf *)",
            "Bash(htop *)",
            "Bash(btop *)",
            "Bash(jq *)",
            "Bash(yq *)",
            "Bash(hexyl *)",
            "Bash(prettier *)",
            "Bash(eslint *)",
            "Bash(tsc *)",
            "Bash(pnpm *)",
            "Bash(yarn *)",
            "Bash(mkdir -p /tmp/claude-scratch*)",
            "Bash(touch /tmp/claude-*)",
            "Bash(echo * > /tmp/claude-*)",
            "Bash(cat /tmp/claude-*)"
        ],
        "deny": [
            "Bash(rm -rf /)",
            "Bash(:(){ :|:& };:)",
            "Bash(dd if=/dev/zero of=/dev/*)",
            "Bash(mkfs.*)",
            "Bash(> /dev/sda*)"
        ]
    },
    "env": {
        "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
        "EDITOR": "zed",
        "GIT_EDITOR": "zed --wait"
    },
    "cleanupPeriodDays": 90,
    "includeCoAuthoredBy": false,
    "alwaysThinkingEnabled": true
}